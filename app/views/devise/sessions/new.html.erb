<% content_for :head do %>
  Se connecter
<% end %>
<div class='container form-container' style="height: 100vh;">
  <div class="generic-form-container">
    <div class='generic-form'>
      <div class="form-description">
        <p> Bienvenue sur SurpriZe me </p>
        <p> Connectez-vous </p>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, label:"Mot de passe", required: false %>
          <%= f.input :remember_me, label:"Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Se connecter", class: 'form-button' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

