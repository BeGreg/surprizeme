<!-- app/views/payments/new.html.erb -->
<h1>Surprise payement </h1>
<%= form_tag surprise_payments_path(@surprise) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@surprise.amount) %></span>
    </label>
  </article>

  # Commented for the lecture, remove comments.
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Product"
    data-email="<%= current_user.email %>"
    data-description="Product <%= @surprise.product.name%>"
    data-amount="<%= @surprise.amount_cents %>"
    data-currency="<%= @surprise.amount.currency %>"></script>

<% end %>
