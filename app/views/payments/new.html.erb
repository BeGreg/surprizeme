<!-- app/views/payments/new.html.erb -->
<div class='container' id="payment-content">
  <div class="payment-title">
    <h1>Paiement </h1>
  </div>

  <div class="payment-description">
  <h2>Bonne nouvelle ! </h2>
  <h2> Nous avons trouvé LA surprize pour vous, et sa valeur rentre dans votre budget. </h2>
  <h2>Qu'est-ce que ça pourrait bien être ?</h2>
  </div>

  <div class="payment-action">
  <%= form_tag surprise_payments_path(@surprise) do %>
    <article>
      <label class="amount">
        <span>Valeur de la surprize : <%= number_to_currency(@surprise.amount, unit: "€", separator: ",", delimiter: "", format: "%n %u") %></span>
      </label>
    </article>


    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-label="Payer par carte bancaire"
      data-locale="auto"

      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-name="Ma Surprize"
      data-email="<%= current_user.email %>"

      data-amount="<%= @surprise.amount_cents %>"
      data-currency="<%= @surprise.amount.currency %>"></script>

  <% end %>
  </div>
</div>

