<div class='container form-container'>
  <div class="form-title">
    <h2>Mon compte</h2>
  </div>

  <div class="col-xs-3 col-md-6-offset" id="informations-profil">
    <figure class="snip1344">
      <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/profile-sample1.jpg" alt="profile-sample1" class="background-profil"/>
      <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/profile-sample1.jpg" alt="profile-sample1" class="profile"/>
      <figcaption>
        <h3><%=current_user.first_name%></h3>
      </figcaption>
    </figure>
    <ul id="user-info">
      <p> Mes informations personnel : </p>
        <table>
        <tr>
          <td>Prénom: </td>
          <td><%= current_user.first_name %></td>
        </tr>
        <tr>
          <td>Nom: </td>
          <td><%= current_user.last_name %></td>
        </tr>
        <tr>
          <td>E-mail: </td>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <td>adresse: </td>
          <td><%= current_user.address %></td>
        </tr>
        <tr>
          <td>N° de téléphone: </td>
          <td><%= current_user.mobile_phone %></td>
        </tr>
        </table>
      <p id="lien-edit"><%=link_to "Mettre a jour mes informations", edit_user_path%></p>
      <p> Historique de mes surprises :</p>
      <li id="list-surprise-user">
        <% current_user.surprises.all.each do |surprise|%>
        <li><br><%= surprise.product.name %></li>
        <br><%= surprise.product.created_at %>
        <br><em><%= surprise.product.price %></em><%="€"%>
        <% end %>
      </li>
    </ul>

  </div>
</div>


