<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <div> <%= image_tag("logo.png") %>
    SurpriZe Me
    </div>
  </a>
  <!-- Right Navigation -->

  <% if user_signed_in? %>
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <%= link_to "Mon compte", user_path(current_user) %>
      <div class="navbar-wagon-item navbar-wagon-link">Bonjour <%= current_user.first_name %> ! <br>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "DÃ©connexion") %>
        <% end %>
        <% if !current_user.facebook_picture_url.nil? %>
          <img src=<%= current_user.facebook_picture_url %> class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <%= link_to "S'inscrire", new_user_registration_path %>
      <%= link_to "Se connecter", user_session_path %>
    </div>
  <% end %>
    <!-- Dropdown appearing on mobile only -->
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

          <%= link_to "S'enregistrer", new_user_registration_path %>
          <%= link_to "Se connecter", user_session_path %>
        </ul>
      </div>
    </div>
</div>
